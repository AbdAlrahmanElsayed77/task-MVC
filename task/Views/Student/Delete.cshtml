@model task.Models.Student

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Delete Student</h2>

    <h4>Are you sure you want to delete this student?</h4>
    <div>
        <strong>@Model.Name</strong> - @Model.Age years old
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Ssn" />
        <button type="submit" class="btn btn-danger px-4">Delete</button>
        <a asp-action="GetAll" class="btn btn-secondary px-4">Cancel</a>
    </form>
</div>
