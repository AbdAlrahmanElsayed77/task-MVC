@model IEnumerable<task.Models.Course>
@{
    ViewData["Title"] = "Courses";
    Layout = "_Layout";
}
<h2 class="mb-3">Courses</h2>

<a asp-action="Add" class="btn btn-success mb-3">+ Add Course</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Num</th>
            <th>Name</th>
            <th>Topic</th>
            <th>Degree</th>
            <th>MinDegree</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Num</td>
                <td>@c.Name</td>
                <td>@c.Topic</td>
                <td>@c.Degree</td>
                <td>@c.MinDegree</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Num" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@c.Num" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Num" class="btn btn-danger btn-sm"
                      >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
