@model task.Models.Department

@{
    ViewData["Title"] = "Add Department";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Add Department</h2>

    <form asp-action="Add" method="post" class="card p-4 shadow-sm">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter department name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Manger" class="form-label"></label>
            <input asp-for="Manger" class="form-control" placeholder="Enter manager name" />
            <span asp-validation-for="Manger" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Location" class="form-label">Location</label>
            <select asp-for="Location" class="form-control">
                <option value="">-- Select Location --</option>
                <option value="EG">EG</option>
                <option value="USA">USA</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success px-4">Save</button>
        <a asp-action="GetAll" class="btn btn-secondary px-4">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
